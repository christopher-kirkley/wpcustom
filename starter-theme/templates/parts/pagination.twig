{% if posts.pagination.pages %}
	<nav>
		<ul class="pagination">
			{# previous #}
			{% if posts.pagination.prev %}
			<li class="page-item disabled"><a class="page-link disabled" href="{{ posts.pagination.prev.link }}">Previous</a></li>
			{% else %}
			<li class="page-item"><a class="page-link" href="">Previous</a></li>
			{% endif %}
			{# pages #}
			{% for page in posts.pagination.pages %}
				{% if page.current %}
				<li class="page-item"><a class="page-link active" href="">{{ page.title }}</a></li>
				{% else %}
					<li class="page-item"><a class="page-link disabled" href="{{ page.link }}">{{ page.title }}</a></li>
				{% endif %}
			{% endfor %}
			{# next #}
			{% if posts.pagination.next %}
			<li class="page-item disabled"><a class="page-link" href="{{ posts.pagination.next.link }}">Next</a></li>
			{% else %}
			<li class="page-item"><a class="page-link" href="">Next</a></li>
			{% endif %}
		</ul>
	</nav>

{% endif %}
