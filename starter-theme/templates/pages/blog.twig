{% extends "base.twig" %}

{% block content %}
	<div class="blog-wrapper">
		{% for post in posts %}
		<div class="blog-item">
			<h3 class="title">{{ post.title }}</h3>
			<h4>{{ post.date }}</h4>
			<div class="article">
				{{ post.get_content }}
				<a class="blog-link" href="{{ post.link }}">[Read More]</a>
			</div>
		</div>
		{% endfor %}
		<!-- {{ include('parts/pagination.twig') }} -->
	</div><!-- /content-wrapper -->
{% endblock %}
