{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper">
		<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
			<section class="article-content">
				<div class="container">
					<div class="row">
							<h1>hello from page {{ post.title }}</h1>
						<div class="col">
							<h1 class="article-h1">{{post.title}}</h1>
							<div class="article-body">
								{{post.content}}
							</div>
						</div>
					</div>
				</div>
			</section>
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}
